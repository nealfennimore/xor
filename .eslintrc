{
    "root": true,
    "extends": [
        "nfen"
    ],
    "parser": "babel-eslint",
    "env": {
        "jest": true
    },
    "globals": {
        "expect": false
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "space-before-blocks": [
            2, "always"
        ],
        "space-before-function-paren": [
            2,"never"
        ],
        "space-in-parens": [
            2, "always"
        ],
        "space-infix-ops": 2,
        "space-unary-ops": [
            2,
            {
                "words": true,
                "nonwords": false,
                "overrides": {
                    "!!": true,
                    "!": true
                }
            }
        ],
        "no-multiple-empty-lines": [
            "error",
            {
                "max": 2,
                "maxEOF": 1
            }
        ]
    }
}